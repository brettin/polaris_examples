# split infile.base into chunks equal to the number of ranks
split -l 40 -d infile.basenames 

# rename the splits so they are integers
ls x* | perl -lne '$n=$1 if /(\d+)/; $n=~s/^0//; print `mv $_ $n`'

# create infile for submit.sh
ls > arg1

# clean up arg1
vi arg1

# run job
qsub -v arg1=arg1 ./submit.sh
